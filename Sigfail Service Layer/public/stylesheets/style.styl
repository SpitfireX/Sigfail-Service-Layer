dodger_blue = #1E90FF
dark_dodger_blue = #002d59

html
	height: 100vh

body
	margin: 0px
	padding: 0px
	position:absolute
	top:0
	bottom:0
	right:0
	left:0
	font-family: 'Roboto', sans-serif
	font-size: 16px
	color: #212121
	background: linear-gradient(dodger_blue, dark_dodger_blue) fixed
	text-align: center

a
	color: #00B7FF

.card
	display: inline-block
	background: #FAFAFA
	box-shadow: 0 2px 2px 0 rgba(0,0,0,.14),0 3px 1px -2px rgba(0,0,0,.2),0 1px 5px 0 rgba(0,0,0,.12)
	border-radius: 2px

#center-card
	text-align: left
	margin: 100px 50px 0px 50px
	padding-top: 10px
	padding-bottom: 25px
	max-width: 50vw

.separator
	margin:	0px
	border-color: #E4E4E4
	border-width: 1px 0px 0px
	border-style: solid

p
	margin: 10px 50px

h1
	margin: 0.67em 50px